@model IEnumerable<BigSchoolLancuoi.Models.Course>

@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attending</h2>

<div class="row">
    <ul class="course">
        @foreach (var item in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @item.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @item.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @item.Name
                    </span>
                    <br />
                    <span class="category">
                        @item.Category.Name
                    </span>
                    <span class="course">
                        @item.Place
                    </span>
                </div>
            </li>
        }
    </ul>
</div>
